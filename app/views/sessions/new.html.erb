<% provide(:title, 'Log in') %>

<%= form_for(:session, url: login_path, html: { class: "form-horizontal" }) do |f| %>		
	<fieldset>
    <legend>Log in</legend>

    <div class="form-group">
			<%= f.label :email, class: 'col-lg-2 control-label' %>
			<div class="col-lg-10">
				<%= f.email_field :email, class: 'form-control', placeholder: "Email" %>
			</div>
		</div>

		<div class="form-group">
			<%= f.label :password, class: "col-lg-2 control-label" %>
			<div class="col-lg-10">
				<%= f.password_field :password, class: 'form-control', placeholder: "Password" %>
				<span class="help-block">
				 	<%= link_to "Forgot your password?", new_password_reset_path %>
				</span>
			</div>
		</div>

		<div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <%= f.submit "Cancel", class: "btn btn-default" %>
        <%= f.submit "Log in", class: "btn btn-primary" %>
      </div>
    </div>
    
  </fieldset>  
<% end %>

<span class="help-block"> 
	New user? Create a profile 
	<%= link_to "for yourself", signup_path, class: 'underline' %> 
	or for 
	<%= link_to "your organization", new_organization_path, class: 'underline' %>.
</span>