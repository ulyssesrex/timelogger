<%= form_tag('#', class: "form-horizontal") do %>

  <fieldset>
    <legend>Filter Timelogs</legend>
    <div class="row">
      <div class="form-group col-xs-6">
        <%= 
          label_tag "From", nil, class: "col-lg-2 control-label"
        %>
        <div class="col-lg-10">
          <% two_mondays_ago = User.date_of_last('Monday', weeks=2) %>
          <%= 
            text_field_tag "View from", nil, 
            placeholder: "#{two_mondays_ago.strftime("%m/%d/%Y")}", 
            class: "form-control", id: 'date-selector-from' 
          %>
        </div>
      </div>

      <div class="form-group col-xs-6">
        <%= 
          label_tag "Until", nil, class: "col-lg-2 control-label"
        %>
        <div class="col-lg-10">
          <% today = Time.zone.now %>
          <%= 
            text_field_tag "View until", nil, 
            placeholder: "#{today.strftime("%m/%d/%Y")}", 
            class: "form-control", id: 'date-selector-until' 
          %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-xs-6">
        <%= label_tag "Order", nil, class: "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <div class="radio">
            <label>
              <input name="optionsRadios" id="optionsRadiosNewOld" value="0" checked="" type="radio">
              New -> Old
            </label>
          </div>
          <div class="radio">
            <label>
              <input name="optionsRadios" id="optionsRadiosOldNew" value="1" type="radio">
              Old -> New
            </label>
          </div>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <button type="submit" class="btn btn-primary">Filter</button>
      </div>
    </div>
  </fieldset>
<% end %>



