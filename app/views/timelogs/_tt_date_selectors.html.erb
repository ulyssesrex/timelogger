<%= form_tag('#', class: "form-horizontal") do %>

  <fieldset>
    <legend>Filter Timelogs</legend>

    <% if current_user?(user) && current_user.has_supervisees? %>
      <div class="form-group">
        <label for="select" class="col-lg-2 control-label">User</label>
        <div class="col-lg-10">
          <select multiple="" class="form-control">
            <option><%= full_name(current_user) %></option>
            <% for supervisee in current_user.supervisees %>
              <option><%= full_name(supervisee) %></option>
            <% end %>
          </select>
        </div>
      </div>
    <% end %>

    <div class="form-group">
      <%= 
        label_tag "View from", nil, class: "col-lg-2 control-label"
      %>
      <div class="col-lg-10">
        <%= 
          text_field_tag "View from", nil, 
          placeholder: "mm/dd/yyyy", 
          class: "form-control", id: 'date-selector-from' 
        %>
      </div>
    </div>

    <div class="form-group">
      <%= 
        label_tag "View until", nil, class: "col-lg-2 control-label"
      %>
      <div class="col-lg-10">
        <%= 
          text_field_tag "View until", nil, 
          placeholder: "mm/dd/yyyy", 
          class: "form-control", id: 'date-selector-until' 
        %>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag "Order timelogs", nil, class: "col-lg-2 control-label" %>
      <div class="col-lg-10">
        <div class="radio">
          <label>
            <input name="optionsRadios" id="optionsRadiosNewOld" value="0" checked="" type="radio">
            New -> Old
          </label>
        </div>
        <div class="radio">
          <label>
            <input name="optionsRadios" id="optionsRadiosOldNew" value="1" type="radio">
            Old -> New
          </label>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <button type="submit" class="btn btn-default">Filter</button>
      </div>
    </div>

  </fieldset>
<% end %>



