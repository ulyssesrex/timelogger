<header class="navbar navbar-fixed-top navbar-inverse">
	<div class="container">
		<%= link_to image_tag("navbar-logo.png", size: '187x40'), root_path, id: "logo" %>
		<nav>
			<ul class="nav navbar-nav navbar-right">
				<% if logged_in? %>
					
					<li><%= link_to "Home", root_path %></li>
					
					<li class="dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown">
							My Settings <b class="caret"></b>
						</a>
						<ul class="dropdown-menu">
							<li><%= link_to "My Info",   edit_user_path(current_user) %></li>
							<li><%= link_to "My Grants", grantholdings_path %></li>				
					</li>
					
					<% if current_user.supervisees.any? || current_user.admin? %>
						<li class="dropdown">
							<a href="#" class="dropdown-toggle" data-toggle="dropdown">
								My Co-workers <b class= "caret"></b>
							</a>
							<ul class="dropdown-menu">
								<% if current_user.supervisees.any? %>
									<li><%= link_to "My Supervisees", supervisees_path %></li>
									<li><%= link_to "All Co-Workers", all_coworkers_path %></li>
								<% end %>
								<% if current_user.admin? %>
									<li><%= link_to "Confer admin status", make_admin_path %></li>
									<li><%= link_to "Delete user", delete_user_path %></li>
								<% end %>
							</ul>
						</li>
					<% else %>
					  <li><%= link_to "My Co-Workers", all_coworkers_path %></li>
					<% end %>
					
					<li><%= link_to "Help", 	help_path   %></li>
					<li><%= link_to "Logout", logout_path %></li>
					
				<% else %>
					<li><%= link_to "Login",  login_path  %></li>
				<% end %>
			</ul>
		</nav>
	</div>
</header>