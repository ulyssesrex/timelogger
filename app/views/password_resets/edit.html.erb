<% provide(:title, 'Reset password') %>

<%= form_for(@user, html: { class: 'form-horizontal' }, url: password_reset_path(@reset)) do |f| %>

  <fieldset>
    <legend>Reset password</legend>

    <%= hidden_field_tag :email, @user.email %>

      <div class="form-group">
        <%= f.label :password, "New password", class: "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <%= f.password_field :password, class: 'form-control', placeholder: "New password" %>
        </div>
      </div>

      <br>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm password", class: "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Confirm password" %>
        </div>
      </div>

      <br>

      <div class="form-group">
        <div class="col-lg-10 col-lg-offset-2">
          <%= f.submit "Reset password", class: "btn btn-primary" %>
        </div>
      </div>

  </fieldset>
<% end %>