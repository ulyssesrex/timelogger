<% provide(:title, 'Edit my info') %>

<%= form_for @user, html: { class: 'form-horizontal' } do |f| %>
	<% if @user.errors.any? %>
		<%= render partial: 'shared/error_messages', locals: { object: @user } %>
	<% end %>

	<fieldset>
    <legend>Edit your info</legend>

  	<%= render partial: 'user_fields', locals: { f: f, user: @user } %>
  </fieldset>

  <fieldset>
  	<legend>Edit your grants</legend>
  	
  	<%= render partial: 'user_grants_fields', locals: { f: f, user: @user } %>
	
		<div class="form-group">
	    <div class="col-lg-10 col-lg-offset-2">
	      <%= f.submit "Cancel", class: "btn btn-default" %>
	      <%= f.submit "Submit", class: "btn btn-primary" %>
	    </div>
	  </div>
	</fieldset>	
<% end %>

<br><br>

<fieldset>
	<legend>Other actions</legend>
	<%= 
		link_to "Reset my password", new_password_reset_path, 
		class: 'btn btn-default' 
	%>
	<%= 
		link_to "Delete my profile", users_path(@user), method: :destroy, 
		class: 'btn btn-default', 
		confirm: "Are you sure you want to delete your Timelogger profile?"
	%>
</fieldset>

<br><br><br>