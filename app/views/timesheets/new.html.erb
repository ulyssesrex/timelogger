<h1>New Timesheet</h1>

<%= form_for(@timesheet) do |f| %>
	
	<%= render partial: 'form_errors', locals: { timesheet: @timesheet } %>
	
  <div class="field">
    <%= f.label :start_time  %><br>
    <%= f.time_select :start_time %>
  </div>
  <div class="field">
    <%= f.label :end_time %><br>
    <%= f.time_select :end_time %>
  </div>
  <div class="field">
    <%= f.label :comments %><br>
    <%= f.text_area :comments %>
  </div>  
  <div class="actions">
    <%= f.submit "Cancel" %>
		<%= f.submit "Submit" %>
  </div>
	
<% end %>