<% provide(:title, 'Edit grant') %>

<%= form_for @grant, url: { action: 'update' }, html: { class: 'form-horizontal' } do |f| %>
	<% if @grant.errors.any? %>
		<%= render partial: 'shared/error_messages', locals: { object: @grant } %>
	<% end %>

	<fieldset>
    <legend>Edit <%= @grant.name %></legend>

			<div class="form-group">
				<%= f.label :name, class: "col-lg-2 control-label" %>
				<div class="col-lg-10">
					<%= 
						f.text_field :name, 
						class: 'form-control', 
						placeholder: (@grant.name || "Grant name") 
					%>
				</div>
			</div>  

		<div class="form-group">
			<%= f.label :comments, class: "col-lg-2 control-label" %>
			<div class="col-lg-10">
				<%= 
					f.text_area :comments, 
					class: 'form-control', rows: 3, 
					placeholder: (@grant.comments || "Describe grant here") 
				%>
			</div>
		</div>

		<div class="form-group">
	    <div class="col-lg-10 col-lg-offset-2">
	      <%= link_to "Cancel", grants_path, class: "btn btn-default" %>
	      <%= f.submit "Submit changes", class: "btn btn-primary" %>
	    </div>
	  </div>
	</fieldset>	
<% end %>