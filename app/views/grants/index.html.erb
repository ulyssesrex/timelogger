<p id="notice"><%= notice %></p>

<h1>Listing Grants</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Comments</th>

      <th>Organization</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @grants.each do |grant| %>
      <tr>
        <td><%= grant.name %></td>
        <td><%= grant.comments %></td>
        <td><%= link_to 'Edit', edit_grant_path(grant) %></td>
        <td><%= link_to 'Destroy', grant, method: :delete, data: { confirm: 'Are you sure? This will delete the grant for everyone in your organization.' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Grant', new_grant_path %>
