<% provide(:title, 'Enroll organization') %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
		<%= form_for(@organization) do |f| %>
		
		  <% if @organization.errors.any? %>
		    <%= render partial: 'errors', locals: { organization: @organization } %>
		  <% end %>

			<h1>Organization information</h1>
			<h2>This will be used to create your organization's profile.</h2>
			
			<%= render partial 'organization_fields', locals: { f: f } %>
			
			<h1>Your information</h1>
			<h2>This will be used to create your profile.</h2>
			
			<%= f.fields_for :users do |ff| %>
				<%= render partial: 'admin_fields', locals: { f: ff } %>
			<% end %>
				
		  <div class="actions">
				<%= f.submit "Cancel", class: "btn btn-primary my-btn" %>
		    <%= f.submit "Submit", class: "btn btn-primary my-btn" %>
		  </div>

		<% end %>
	</div>
</div>