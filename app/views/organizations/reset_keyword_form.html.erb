<% provide(:title, "Reset Keyword") %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
		<%= form_for @organization, url: { action: 'reset_keyword', controller: 'organizations' } do |f| %>
		
		  <% if @organization.errors.any? %>
		    <%= render partial: 'errors', locals: { organization: @organization } %>
		  <% end %>

		  <h1><%= "Reset #{@organization.name}'s keyword" %></h1>

		  <%= render partial: 'keyword_fields', locals: { f: f } %>

		  <div class="actions">
				<%= f.submit "Cancel", class: "btn btn-primary my-btn" %>
		    <%= f.submit "Submit", class: "btn btn-primary my-btn" %>
		  </div>

		<% end %>
	</div>
</div>